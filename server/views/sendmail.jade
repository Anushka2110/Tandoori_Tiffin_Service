  body
    .header
      .container
        .top-header
          .header-left
            p Tandoori Tiffin Service
          .login-section
            ul
              li
                a(href='/') Home
   

    .orderf
      .container
    br
  
   .contact
      .container
          .order-pic.text-left
             img(src='images/order.png', width=200,alt='')

          .contact-info
            h3  COMPOSE YOUR MAIL
            .strip-line
          br

   
          .contact-form.col-md-6
            form(action='/sendmail', name='sendmail', id='sendmail', method='post')
              fieldset
                p
                  label(for='name') Name:
                  br
                  input(name='name', type='text',placeholder='Enter Your name', id='name')
                p
                  label(for='email') Email:
                  br
                  input(name='email', type='text', placeholder='Enter E-mail ID ', id='email')
                p
                  label(for='message') Message:
                  br
                  textarea(name='message', cols='40', rows='10', placeholder='Message ',id='message')
                p
                  input(name='submit', type='submit', value='Send', id='submit')


          .del.col-md-6
            img(src='images/girl.jpg',alt='')
        
      .msg.col-md-offset-1
        if(typeof msg !== 'undefined')
          if(!!err)
            div(class='msgbox err') #{msg}
          else
            div(class='msgbox success') #{msg}

         

